<p id="notice"><%= notice %></p>

<h1><%= @facility.name %> - Facility Items</h1>
<%= paginate @facility_items, theme: 'twitter-bootstrap-4' %>
<%= page_entries_info @facility_items %>
<table class="table table-dark table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>        
      <th class="float-right"><%= link_to 'New Facility Item', new_facility_facility_item_path(), {class: "btn btn-success"} %></th>
    </tr>
  </thead>

  <tbody>
    <% @facility_items.each do |facility_item| %>
      <tr>
        <td><%= facility_item.name %></td>    
        <td class="float-right">
          <%= link_to 'Show', facility_facility_item_path(@facility.id, facility_item.id), {class: "btn btn-primary"} %>
          <%= link_to 'Edit', edit_facility_facility_item_path(@facility.id, facility_item.id), {class: "btn btn-secondary"} %>
          <%= link_to 'Destroy', facility_facility_item_path(@facility.id, facility_item.id), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', facility_path(@facility), class: 'btn btn-secondary' %>
