<% if notice %>
<div id="notice" class="alert alert-primary" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>  
<% end %>

<h1>Templates</h1>
<%= paginate @templates, theme: 'twitter-bootstrap-4' %>
<%= page_entries_info @templates %>
<table class="table table-dark table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>        
      <th class="float-right"><%= link_to 'New Template', new_template_path, {class: "btn btn-success"} %></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.name %></td>          
        <td class="float-right">
          <%= link_to 'Show', template, {class: "btn btn-primary"} %>
          <%= link_to 'Edit', edit_template_path(template), {class: "btn btn-secondary"} %>
          <%= link_to 'Destroy', template, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
