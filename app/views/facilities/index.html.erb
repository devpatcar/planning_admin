<p id="notice"><%= notice %></p>

<h1>Facilities</h1>
<%= paginate @facilities, theme: 'twitter-bootstrap-4' %>
<%= page_entries_info @facilities %>
  <table class="table table-dark table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>        
        <th class="float-right"><%= link_to 'New Facility', new_facility_path, {class: "btn btn-success"} %></th>
      </tr>
    </thead>

    <tbody>
      <% @facilities.each do |facility| %>
        <tr>
          <td><%= facility.name %></td>          
          <td class="float-right"><%= link_to 'Show', facility, {class: "btn btn-primary"} %><%= link_to 'Edit', edit_facility_path(facility), {class: "btn btn-secondary"} %><%= link_to 'Destroy', facility, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>