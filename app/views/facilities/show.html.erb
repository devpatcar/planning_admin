  <%= @facility.name %>
  </div>
  <div class="col-md-6">
  <%= link_to 'Show Facility Items', facility_facility_items_path(@facility), class: "btn btn-primary float-right" %> 
  </div>
</div>

<%= link_to 'Back', facilities_path, class: "btn btn-secondary" %>
