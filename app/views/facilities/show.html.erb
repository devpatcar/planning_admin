<% if notice %>
  <div id="notice" class="alert alert-primary" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>  
<% end %>

<div class="row">
  <div class="col-md-6">
