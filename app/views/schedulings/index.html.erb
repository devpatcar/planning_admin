<% if notice %>
<div id="notice" class="alert alert-primary" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>  
<% end %>

<h1><%= @template.name %> - Schedulings</h1>
<table class="table table-dark table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>     
      <th>Start date</th>
      <th>End date</th>
      <th>Monday</th>
      <th>Thuesday</th>
      <th>Wendsday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Sunday</th>
      <th>Week duration</th>
      <th>Delay</th>
      <th>Notification</th>
      <th class="float-right"><%= link_to 'New Scheduling', new_template_scheduling_path(), {class: "btn btn-success"} %></th>
    </tr>
  </thead>

  <tbody>
    <% @schedulings.each do |scheduling| %>
      <tr>
        <td><%= scheduling.name %></td>
        <td><%= scheduling.start_date %></td>
        <td><%= scheduling.end_date %></td>
        <td><%= scheduling.monday %></td>
        <td><%= scheduling.thuesday %></td>
        <td><%= scheduling.wendsday %></td>
        <td><%= scheduling.thursday %></td>
        <td><%= scheduling.friday %></td>
        <td><%= scheduling.saturday %></td>
        <td><%= scheduling.sunday %></td>
        <td><%= scheduling.week_duration %></td>
        <td><%= scheduling.delay %></td>
        <td><%= scheduling.notification %></td>
       <td class="float-right">
          <%= link_to 'Show', template_scheduling_path(@template.id, scheduling.id), {class: "btn btn-primary"} %>
          <%= link_to 'Edit', edit_template_scheduling_path(@template.id, scheduling.id), {class: "btn btn-secondary"} %>
          <%= link_to 'Destroy', template_scheduling_path(@template.id, scheduling.id), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
