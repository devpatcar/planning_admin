<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :question %>
    <%= form.text_field :question, id: :question_question %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :question_description %>
  </div>

  <div class="field">
    <%= form.label :template_id %>
    <%= form.number_field :template_id, id: :question_template_id %>
  </div>

  <div class="field">
    <%= form.label :required %>
    <%= form.check_box :required, id: :question_required %>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.check_box :images, id: :question_images %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.check_box :comment, id: :question_comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
